generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Book {
  id       String @id @unique @default(cuid())
  title    String
  coverUrl String
  author   String
  Post     Post[]
}

model Post {
  id          String    @id @unique @default(cuid())
  title       String
  description String
  createdAt   DateTime
  type        PostType
  book        Book      @relation(fields: [bookId], references: [id])
  bookId      String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  commentList Comment[]
}

model User {
  id         String    @id @unique @default(cuid())
  email      String    @unique
  password   String
  nickname   String
  profileUrl String?
  Post       Post[]
  Comment    Comment[]
}

model Comment {
  id       String @id @unique @default(cuid())
  contents String
  post     Post   @relation(fields: [postId], references: [id])
  postId   String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
}

enum PostType {
  REVIEW
  DEBATE
  MEMO
}